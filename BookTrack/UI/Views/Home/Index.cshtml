@model List<EntityLayer.Book>

<h2>Kitap Listesi</h2>

<a href="@Url.Action("Create", "Book")" class="btn btn-primary">Yeni Kitap Ekle</a>

<table>
    <thead>
        <tr>
            <th>Kitap ID</th>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a href="@Url.Action("Edit", "Book", new {id = book.Id})" class="btn btn-warning">Düzenle</a>
                    <a href="@Url.Action("Delete", "Book", new {id = book.Id})" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>